# Database URL (PostgreSQL)
# Get one from: https://neon.tech, https://planetscale.com, or https://supabase.com
DATABASE_URL="postgresql://username:password@host:5432/database_name"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generate-a-random-secret-here-min-32-chars"

# Google OAuth (Optional)
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# GitHub OAuth (Optional)
# Get from: https://github.com/settings/developers
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# UploadThing (File uploads)
# Get from: https://uploadthing.com/dashboard
UPLOADTHING_SECRET=""
UPLOADTHING_APP_ID=""

# Socket.io Server URL (for local dev with separate socket server)
# Leave empty for default behavior
SOCKET_IO_SERVER_URL=""
